<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnFeature1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btnFeature2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature 2"
        app:layout_constraintTop_toBottomOf="@+id/btnFeature1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btnFeature3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature 3"
        app:layout_constraintTop_toBottomOf="@+id/btnFeature2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btnFeature4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature 4"
        app:layout_constraintTop_toBottomOf="@+id/btnFeature3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>